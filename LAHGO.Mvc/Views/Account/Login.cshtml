@model LoginVM
@{
    ViewData["Title"] = "Login";
}
@await Component.InvokeAsync("DetailHeader")
<section id="section1-account">
    <div class="ccontainer row g-0 justify-content-center">
        <div class="login col-lg-6 col-12">
            <div class="section-title">
                Log In
            </div>
            <div class="account-describtion">
                Welcome back!
            </div>
            <div class="text text-danger mb-3" asp-validation-summary="ModelOnly"></div>
            <form method="post">
                <div class="password-inputs inputs col-lg-12">
                    <label class="input-labels" for="email">your email</label>
                    <input type="text" asp-for="Email" id="" placeholder="Your Email">
                    <span class="text text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="password-inputs inputs col-lg-12">
                    <label class="input-labels" for="password">Password</label>
                    <input type="password" asp-for="Password" id="" placeholder="Password">
                    <span class="text text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="subscribtion-input d-flex align-items-center">
                    <input id="" type="checkbox" asp-for="RememberMe">
                    <label asp-for="RememberMe">Remember Me</label>
                </div>

                <button type="submit" class="login-button">
                    log in
                </button>
                <div class="text-center forgot-psswrd-container">
                    <a class="forgot-psswrd" href="">forgot your password?</a>
                </div>
                <div class="text-center forgot-psswrd-container">
                    <a class="forgot-psswrd" asp-controller="account" asp-action="register">don't have an account?</a>
                </div>
            </form>
        </div>

    </div>
</section>

