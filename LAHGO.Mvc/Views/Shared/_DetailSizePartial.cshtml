@model SizePCSVM

<select name="SizeId" class="size-select">
    @foreach (var pcs in Model.ProductColorSizes)
    {
        <option value="@pcs.SizeId" class="detail-size-container d-flex align-items-center small-colors">@Model.Sizes.FirstOrDefault(s => s.Id == pcs.SizeId).Name</option>

    }
</select>